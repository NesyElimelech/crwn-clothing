{
  "name": "crwn-clothing-server",
  "version": "1.0.0",
  "engines": {
    "node": "^12.16.1",
    "npm": "^6.11.3"
  },
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "email": "nodemon email-server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run email\" \"npm run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemailer": "^6.4.6",
    "stripe": "^8.44.0"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.3"
  }
}
